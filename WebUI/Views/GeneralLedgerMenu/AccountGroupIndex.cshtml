@using Inv.WebUI.Resources
@{
    ViewBag.Title = "Accountstatement";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<div class="row gy-3" id="divnotifications">
    <!-- Filter Container -->
    <div id="div_dis" class="col-12">
        <div class="card bg-light-blue" id="informtionReserved">
            <div class="card-body">
                <div class="row">

                    <div class="col-12 col-xl-6">
                        <div class="row">
                            <div class="col-12 col-md-6">
                                <div class="form-group row">
                                    <label for="txtFromDate" class="col-3 col-md-4 align-self-center p-md-0">@SystemResource.App_FromDate</label>
                                    <div class="col-9 col-md-8">
                                        <input id="txtFromDate" name="" type="date" data-date="MMMM-DD-YYYY" data-date-format="MMMM-DD-YYYY" class="form-control">
                                    </div>
                                </div>
                            </div>
                            <div class="col-12 col-md-6">
                                <div class="form-group row">
                                    <label for="txtToDate" class="col-3 col-md-4 align-self-center p-md-0"> @SystemResource.App_ToDate</label>
                                    <div class="col-9 col-md-8">
                                        <input id="txtToDate" name="" type="date" class="form-control">
                                    </div>
                                </div>
                            </div>
                            <div class="col-12 col-md-6">
                                <div class="form-group row d-flex justify-content-center align-items-center">
                                    <label class="col-3 col-md-4 align-self-center p-md-0"> مجموع الحسابات </label>
                                    <div class="col-9 col-md-8">

                                        <div class="search-content">
                                            <input id="txtGroupCode_ID" name="" type="text" class="form-control" disabled>
                                            <button type="button" id="btnGroupCodeSearch" name="InvoiceSearch" class="btn btn-main btn-search">
                                                <i class="fas fa-search"></i>
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-12 col-md-6">
                                <div class="form-group row">
                                    <label class="align-self-center p-md-0"></label>
                                    <div class="col-9 offset-3 col-md-12 offset-md-0">
                                        <input id="txtGroupCode_DESC" name="" type="text" class="form-control" disabled>
                                    </div>
                                </div>
                            </div>

                            <div class="col-12 col-md-6 display_none">
                                <div class="form-group row  d-flex justify-content-center align-items-center">
                                    <label class="col-3 col-md-4 align-self-center p-md-0">@SystemResource.menu_Costcenter </label>
                                    <div class="col-9 col-md-8">

                                        <div class="search-content">
                                            <input id="txtCenter_Cost_ID" name="" type="text" class="form-control" disabled>
                                            <button type="button" id="btnCCostSearch" name="InvoiceSearch" class="btn btn-main btn-search">
                                                <i class="fas fa-search"></i>
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-12 col-md-6 display_none">
                                <div class="form-group row ">
                                    <label class="align-self-center p-md-0"></label>
                                    <div class="col-9 offset-3 col-md-12 offset-md-0">
                                        <input id="txtCenter_Cost_DESC" name="" type="text" class="form-control" disabled>
                                    </div>
                                </div>
                            </div>

                           

                        </div>
                    </div>

                    <div class="col-12 col-xl-6">
                        <div class="row">
                            <div class="col-12 mt-n3">
                                <div class="form-group row">
                                    <label class="col-2 col-md-2 align-self-center p-md-0"> @SystemResource.insert_restrictions</label>
                                    <div class="col-10 col-md-10">
                                        <div class="row">
                                            <div class="col-12 col-md-6">
                                                <div class="form-check row g-0">
                                                    <label class="col-6 col-md-6  form-check-label align-self-center p-md-0" for="chk_Certified"> @SystemResource.Certification</label>
                                                    <div class="col-6 col-md-6 ">
                                                        <input class="form-check-input" type="checkbox" id="chk_Certified" name="CUSTOM6">
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-12 col-md-6">
                                                <div class="form-check row g-0">
                                                    <label class="col-6 col-md-6 form-check-label align-self-center p-md-0" for="chk_New"> @SystemResource.newest</label>
                                                    <div class="col-6 col-md-6 ">
                                                        <input class="form-check-input" type="checkbox" id="chk_New" name="CUSTOM6">
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="col-12 mt-n3">
                                <div class="form-group row">
                                    <label class="col-2 col-md-2 align-self-center p-md-0"> </label>
                                    <div class="col-10 col-md-10">
                                        <div class="row">
                                            <div class="col-12 col-md-6">
                                                <div class="form-check row g-0">
                                                    <label class="col-6 col-md-6  form-check-label align-self-center p-md-0" for="chkview"> @SystemResource.Hide_zero_accounts</label>
                                                    <div class="col-6 col-md-6 ">
                                                        <input class="form-check-input" type="checkbox" id="chkview" name="CUSTOM6">
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-12 col-md-6">
                                                <div class="form-check row g-0">
                                                    <label class="col-6 col-md-6 form-check-label align-self-center p-md-0" for="chk_IncludeInvTR"> ادراج عمليات الفترة من المتاجرة</label>
                                                    <div class="col-6 col-md-6 ">
                                                        <input class="form-check-input" type="checkbox" id="chk_IncludeInvTR" name="CUSTOM6">
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>


                            <div class="col-12 mt-n3" style="padding: 10px;">
                                <div class="form-group row">
                                    <label class="col-4 col-md-2 align-self-center p-md-0 text-blue fw-bold fs-7"> نوع التقرير</label>
                                    <div class="form-group col-8 col-md-10">
                                        <div class="row special-group">
                                            <div class="col-12 mb-n3 mb-xl-0 col-xl-4">
                                                <div class="form-check  d-inline-flex">
                                                    <input class="form-check-input form-radio special-radio" type="radio" id="reptype2" name="reptype" onclick="radiochange(1)" value="2" checked>
                                                    <label class="form-check-label my-auto me-3" for="reptp2"> ارصدة الحسابات<i class="input-helper"></i></label>
                                                </div>
                                            </div>
                                            <div class="col-12  col-xl-4">
                                                <div class="form-check d-inline-flex">
                                                    <input class="form-check-input form-radio special-radio" type="radio" id="reptype1" name="reptype" onclick="radiochange(2)" value="1">
                                                    <label class="form-check-label my-auto me-3" for="reptp3"> افرادي<i class="input-helper"></i></label>
                                                </div>
                                            </div> 
                                            <div class="col-12  col-xl-4">
                                                <div class="form-check d-inline-flex">
                                                    <input class="form-check-input form-radio special-radio" type="radio" id="reptype3" name="reptype" onclick="radiochange(3)" value="3">
                                                    <label class="form-check-label my-auto me-3" for="reptp3"> مجمع<i class="input-helper"></i></label>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
 </div>

@section Script{
<script src="~/ClientApp/GeneralLedger/AccountGroup.js"></script>
}
